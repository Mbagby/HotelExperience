<h1>Messages#index</h1>

<h1>Chat</h1>

<ul id="chat">

<% @messages.each do |message| %>
  <%= message.content %>
 <%end%>
</ul>

<%= form_for Message.new, url: user_messages_path(@user.id), remote: true do |f| %>
  <%= f.text_field :content %>
  <%= f.submit "Send" %>
<% end %>

<%= subscribe_to user_messages_path(@user.id) %>