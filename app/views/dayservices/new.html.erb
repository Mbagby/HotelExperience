<div id ="formBox">

<div class="ui segment">
	  <h2 class="ui right floated header">Schedule Housekeeping</h2>
	  <div class="ui clearing divider"></div>
	<div>

	<div id="workOrderForm" class="ui form">



	<%= form_for @dayservice, url: user_stay_dayservices_path(@user, @stay), html: { multipart: true } 	do |f| %>
		


	<div class="twoBlock">
		<h4 class= "labels">Date For Housekeeping Request</h4>
   		<div class="form-group" >
   			
			<%= f.text_field(:appointment_date, id: "datepicker", placeholder: "Click For Calendar" )%>
		</div>
		<h4 class= "labels">Housekeeping Appointment Time</h4>
		<div class="form-group" >
			<%= f.select(:appointment_time, options_for_select([["Select A Time Slot", ""], "8am - 10am", "9am - 11am", "10am - 12pm", "11am - 1pm", "12pm - 2pm", "1pm - 3pm", "2pm - 4pm", "3pm - 5pm"]), {:class => 'ui dropdown'}) %>
		</div>
	</div>
	


	<div>
	  <%= f.submit "Schedule Housekeeping", class: "btn btn-primary",id: "submitStay" %>
	</div>
	
<% end %>
	
	</div>
	</div>
	</div>
</div>